<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gnyrfta.musicpad.MainActivity" >

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_Instruments" />
    <Spinner
    android:id="@+id/instrumentPadOne_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_below="@id/header"/>
     <Spinner
    android:id="@+id/instrumentPadTwo_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_below="@id/instrumentPadOne_spinner"/>
    <Spinner
    android:id="@+id/instrumentPadThree_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_below="@id/instrumentPadTwo_spinner"/>
    <Spinner
    android:id="@+id/instrumentPadFour_spinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_below="@id/instrumentPadThree_spinner"/>
    <Button
    android:id="@+id/playButton"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_below="@id/instrumentPadFour_spinner" 
    android:text="Play"/>

</RelativeLayout>
